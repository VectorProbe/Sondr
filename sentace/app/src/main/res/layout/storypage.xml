<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear5"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="8dp"
		android:background="#009688"
		android:orientation="vertical">
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="I regret my decision "
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_gravity="center_horizontal" />
		<ScrollView
			android:id="@+id/vscroll4"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#26A69A">
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:orientation="vertical"
				android:weightSum="1">
				<TextView
					android:id="@+id/story"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="left"
					android:text="My guy, I still dey wonder how one week with Nneoma take dey feel like one year. We meet for club, she fine pass all the girls wey dey there, and I know say I must get her attention. She smile, and I know say I done die.\n\nWe spend one week together, and I think say she be the one. We dey laugh, dey joke, dey go out, and I show her all the fine places for Lagos. She tell me say she love me, and I believe am.\n\nBut one morning, she tell me say she no dey feel am again, say she need space. I think say she dey joke, but she pack her things and comot from my house. I dey shock, my guy. One week, she take my heart, and one minute, she break am.\n\nI dey wonder what I do wrong, but I know say I no do anything. She just dey play me like football, and I no know say she dey go commot me from her life like that. I dey hurt, my guy, but I move on. I know say better girl dey out there, and I go find am. But Nneoma, I no forget you, my guy. You teach me lesson, and I go use am wise up."
					android:textSize="20sp"
					android:textColor="#000000" />
				<LinearLayout
					android:id="@+id/linear1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:padding="8dp"
					android:background="#009688"
					android:orientation="vertical"
					android:layout_weight="1">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Muiwa Eleko"
							android:textSize="12sp"
							android:textStyle="italic"
							android:textColor="#000000"
							android:layout_gravity="left" />
						<TextView
							android:id="@+id/time"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="208dp"
							android:padding="8dp"
							android:text="Today"
							android:textSize="12sp"
							android:textColor="#000000"
							android:singleLine="true"
							android:layout_gravity="right" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_remove_red_eye_white"
							android:scaleType="centerCrop"
							android:layout_gravity="center_vertical" />
						<TextView
							android:id="@+id/views"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="8dp"
							android:gravity="left"
							android:text="50"
							android:textSize="12sp"
							android:textColor="#000000"
							android:layout_gravity="left" />
						<TextView
							android:id="@+id/genre"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:gravity="right"
							android:text="Romance"
							android:textSize="12sp"
							android:textColor="#000000" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
