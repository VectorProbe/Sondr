							android:textStyle="italic"
							android:textColor="#000000"
							android:layout_gravity="left" />
						<TextView
							android:id="@+id/date2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="179dp"
							android:padding="8dp"
